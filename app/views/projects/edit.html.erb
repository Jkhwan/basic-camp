<%= link_to "Back to all projects", projects_path %>

<div class="panel panel-primary login">
  <div class="panel-heading">
    <h4>Edit Project</h4>
  </div>
  <br>
  <div class="panel-body">
  <%= simple_form_for @project, html: { class: "form-inline", role: "form" }, defaults: { required: false, error: false, input_html: {class: "form-control"} } do |f| %>
    <%= f.input :name, label: "Name *", input_html: { value: @project.name } %>
    <%= f.input :description, label: "Description *", as: :text, input_html: { rows: 6, value: @project.description } %>
    <br>
    <% if @project && @project.errors.any? %>
      <div class="alert alert-danger">
        <% @project.errors.full_messages.each_with_index do |msg, index| %>
          <p><%= index+1 %>. <%= msg %>.<p> 
        <% end %>
      </div>
      <br>
    <% end %>
    <%= f.button :submit, "Submit your changes", class: 'btn btn-primary' %>
  <% end %>
  </div><br>
</div>