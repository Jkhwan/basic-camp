<div class="home container">
  <div class="projects row">
    <% if @projects %>
      <% @projects.each do |project| %>  
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
          <div class="thumbnail">
            <p class="title"><%= project.name %></p>
            <%= link_to project_path(project) do %>
              <%= image_tag "project.png" %>
            <% end %>
            <p class="description"><%= trim_description(project.description) %></p>
            <p class="view-btn"><%= link_to "View", project_path(project), class: "btn btn-primary btn-lg btn-block" %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
      <div class="thumbnail">
      <p class="title">&nbsp;</p>
        <%= link_to new_project_path do %>
          <%= image_tag "add_new_project.png", class: "add" %>
        <% end %>
        <p class="description"></p>
        <p class="view-btn"><%= link_to "Add New", new_project_path, class: "btn btn-primary btn-lg btn-block" %></p>
      </div>
    </div>
  </div>
</div>
