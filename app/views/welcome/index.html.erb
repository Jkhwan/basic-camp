<div class="panel panel-primary registration">
  <div class="panel-heading">
    <h4>Registration</h4>
  </div>
  <br>
  <div class="panel-body">
    <%= simple_form_for @user, html: { class: "form-inline", role: "form" }, defaults: { label: false, input_html: {class: "form-control"} } do |f| %>
      <%= f.input :username, placeholder: "Username" %>
      <%= f.input :email, placeholder: "Email" %>

      <%= f.input :first_name, placeholder: "Firstname" %>
      <%= f.input :last_name, placeholder: "Lastname" %>

      <%= f.input :password, placeholder: "Password" %>
      <%= f.input :password_confirmation, placeholder: "Password Confirmation" %>

      <br><br>

      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>    
  </div>
</div>

<form class="form-inline" role="form">

  <br><br>
  <div class="checkbox">
    <label>
      <input type="checkbox"> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-default">Sign in</button>
