<div class="container messages">
  <div class="row">
    <div class="panel panel-default panel-primary widget">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-comment"></span>
        <h3 class="panel-title">Recent Messages</h3>
      </div>
      <div class="panel-body">
        <% if @messages.count > 0 %>
          <ul class="list-group">
            <% @messages.each do |message| %>
              <% unless message.id.nil? %>
                <li class="list-group-item">
                  <div class="row">
                    <div class="col-xs-2">
                      <img src="http://placehold.it/80" class="img-circle img-responsive" alt="" />
                    </div>
                    <div class="col-xs-10">
                      <p class="subject"><%= message.subject %></p>
                      <p class="author">By: <%= author_name(message) %> on <%= pretty_date(message.created_at) %></p>
                        <%= link_to discussion_message_path(@discussion, message), method: :delete do %>
                          <span class="glyphicon glyphicon-trash"></span>
                        <% end %>
                      <p><%= message.content %></p>
                    </div>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        <% end %>
        <%= render '/discussions/add_message' %>
      </div>
    </div>
  </div>
</div>
